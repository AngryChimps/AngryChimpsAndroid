<resources>

    <style name="Subheader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:layout_height">@dimen/default_subheader_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">@dimen/default_small_margin</item>
    </style>

    <style name="Caption.Padded">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
    </style>

    <style name="TextField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SpinnerButton" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_material_secondary_light</item>
        <item name="android:layout_marginRight">@dimen/default_small_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SpinnerButton.Time">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="SpinnerButton.Date">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="Separator" parent="Divider">
        <item name="android:layout_marginTop">@dimen/default_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_small_margin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:paddingLeft">@dimen/default_small_margin</item>
        <item name="android:paddingRight">@dimen/default_small_margin</item>
        <item name="android:layout_margin">@dimen/default_tiny_margin</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RaisedButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:layout_margin">@dimen/default_tiny_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RaisedButton.Next">
        <item name="android:text">@string/next</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RaisedButton.Back">
        <item name="android:background">@color/button_material_light</item>
        <item name="android:text">@string/back</item>
    </style>

    <style name="Card">
        <item name="android:layout_marginTop">@dimen/card_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_medium</item>
        <item name="android:layout_marginRight">@dimen/card_margin_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Card.List">
        <item name="android:layout_marginTop">@dimen/card_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_small</item>
    </style>

    <style name="Card.Grid">
        <item name="android:layout_margin">@dimen/card_margin_small</item>
    </style>

    <style name="PriceText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="PriceText.DollarSign">
        <item name="android:text">@string/dollar_sign</item>
    </style>

    <style name="PriceText.Price">
        <item name="android:layout_marginBottom">@dimen/default_tiny_margin</item>
        <item name="android:layout_marginLeft">@dimen/text_separation</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PriceText.Decimal">
        <item name="android:layout_marginLeft">@dimen/text_separation</item>
        <item name="android:layout_marginTop">@dimen/text_separation</item>
    </style>

    <!--Navigation Drawer styles-->
    <style name="DrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/default_list_item_height</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_keyline</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerText.Blue">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="DrawerText.DkBlue">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
    </style>

    <style name="DrawerModeColorStrip">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">@dimen/default_list_item_height</item>
    </style>

    <style name="DrawerModeColorStrip.Blue">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="DrawerModeColorStrip.DkBlue">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="CenterHorizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
