<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Relevance"
        android:id="@+id/bSearchSortRelevance"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/bSearchSortLocation"
        android:padding="15dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Price (low to high)"
        android:id="@+id/bSearchSortPriceLowHigh"
        android:padding="15dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Price (high to low)"
        android:id="@+id/bSearchSortPriceHighLow"
        android:padding="15dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Percent Discount"
        android:id="@+id/bSearchSortDiscount"
        android:padding="15dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>