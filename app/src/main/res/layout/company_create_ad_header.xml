<?xml version="1.0" encoding="utf-8"?>

<!--Header for the Company Create Ad screen, everything above the time blocks  -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/metCompanyCreateAdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/title"
        android:inputType="textCapSentences"
        app:errorColor="@color/error_red"
        app:floatingLabel="normal"
        app:floatingLabelText="@string/title"
        app:maxCharacters="140" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/metCompanyCreateAdDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom|left"
        android:hint="@string/description"
        android:inputType="textMultiLine|textCapSentences"
        android:minLines="4"
        app:errorColor="@color/error_red"
        app:floatingLabel="normal"
        app:floatingLabelText="@string/description"
        app:maxCharacters="840" />

    <Button
        android:id="@+id/bCompanyCreateAdCategory"
        style="@style/SpinnerButton"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/category"
        android:textColor="@color/text_light_grey"
        android:textSize="18sp" />

</LinearLayout>