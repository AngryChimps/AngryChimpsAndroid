<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/bSearch"
        android:text="SEARCH"
        android:textColor="@color/primary"
        android:layout_marginRight="16dp"
        style="@style/FlatButton"/>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/bSearch"
        android:id="@+id/bCancel"
        android:text="CANCEL"
        style="@style/FlatButton"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bSearch">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Categories"
                style="@style/Subheader"/>

            <Button
                android:text="All"
                android:id="@+id/button"
                style="@style/SpinnerButton" />

            <View
                style="@style/Separator" >
            </View>

            <TextView
                android:text="Distance"
                style="@style/Subheader"/>

            <TextView
                android:text="5 Miles"
                android:id="@+id/textView5"
                android:paddingBottom="0dp"
                style="@style/Caption"/>

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                app:dsb_min="1"
                app:dsb_max="50"
                app:dsb_value="5"/>

            <TextView
                android:text="Near"
                android:id="@+id/textView6"
                style="@style/Caption"/>
            <Button
                android:text="Current Location"
                android:id="@+id/button2"
                style="@style/SpinnerButton" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="I'll go to them"
                    android:textSize="14sp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They must come to me"
                    android:textSize="14sp"/>
                </RadioGroup>

            <View
                style="@style/Separator" >
            </View>

            <TextView
                android:text="Availability"
                style="@style/Subheader"/>

            <TextView
                android:text="From"
                style="@style/Caption"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Today"
                    android:id="@+id/button3"
                    style="@style/SpinnerDateButton" />

                <Button
                    android:layout_marginLeft="0dp"
                    android:text="7:00pm"
                    android:id="@+id/button4"
                    style="@style/SpinnerTimeButton" />
                </LinearLayout>

            <TextView
                android:text="To"
                style="@style/Caption"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Wed, Dec 31"
                    android:id="@+id/button5"
                    style="@style/SpinnerDateButton" />

                <Button
                    android:layout_marginLeft="0dp"
                    android:text="7:00pm"
                    android:id="@+id/button6"
                    style="@style/SpinnerTimeButton" />
            </LinearLayout>

            <View
                style="@style/Separator" >
            </View>

            <TextView
                android:text="Sort by"
                style="@style/Subheader"/>

            <Button
                android:text="Relevance"
                android:id="@+id/button7"
                style="@style/SpinnerButton" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>