<?xml version="1.0" encoding="utf-8"?>

<!--Navigation drawer row for the profile name, image, and email -->

<LinearLayout
    android:id="@+id/drawer_profile_settings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_margin">

    <ImageView
        android:id="@+id/drawer_profile_image"
        android:layout_width="@dimen/navigation_drawer_profile_image"
        android:layout_height="@dimen/navigation_drawer_profile_image"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/drawer_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/drawer_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_tiny_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"/>

</LinearLayout>

