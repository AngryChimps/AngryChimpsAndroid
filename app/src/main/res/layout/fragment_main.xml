<?xml version="1.0" encoding="utf-8"?>

<!--The main fragment loaded over the main activity for both Customer and Provider mode -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_tiny_margin"
        android:scrollbars="vertical"/>

    <!--TODO - make sure this works properly with 4.0
    <com.etsy.android.grid.StaggeredGridView
        android:id="@+id/gridViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:item_margin="8dp" />-->

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_request_white_24dp"
        app:fab_colorNormal="@color/primary"
        app:fab_colorPressed="@color/primary_dark"
        app:fab_colorRipple="@color/ripple" />

</FrameLayout>