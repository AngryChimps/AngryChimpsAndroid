<?xml version="1.0" encoding="utf-8"?>

<!--Navigation drawer row for the profile name, image, and email -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/drawer_profile_settings"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/drawer_profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="67dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/drawer_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/drawer_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/drawer_profile_email"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />

    </RelativeLayout>

</FrameLayout>