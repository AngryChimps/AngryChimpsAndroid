<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_card">

        <ImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:id="@+id/imageCompanyMain"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Company Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imageCompanyMain"
            android:layout_margin="5dp"
            android:id="@+id/tvCompanyTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageCompanyMain"
            android:layout_toRightOf="@id/imageCompanyMain"
            android:text="Tomorrow 9:30am - 12:00pm"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:id="@+id/tvCompanyTimeAvailable"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/imageLocationSymbol"
            android:src="@drawable/ic_action_place"
            android:layout_toRightOf="@id/imageCompanyMain"
            android:layout_above="@id/tvCompanyTimeAvailable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageLocationSymbol"
            android:text="Company Name, \n145 Harrison St\nSan Francisco, CA 94110 "
            android:layout_above="@id/tvCompanyTimeAvailable"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:id="@+id/tvCompanyAddress"/>

    </RelativeLayout>

</FrameLayout>