<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_content"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/imageCompanyMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBarCompany"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:rating="4.5"
                android:stepSize="0.5"/>

            <TextView
                android:id="@+id/tvCompanyDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1.2mi"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/tvCompanyDistance"
                android:src="@drawable/ic_location_grey"/>

            <TextView
                android:id="@+id/tvCompanyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCompanyDistance"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="8dp"
                android:text="Company Title"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvCompanyTitle"
                android:layout_marginLeft="2dp"
                android:text="25"
                android:textColor="@color/accent"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvCompanyName"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@id/tvCompanyName"
                android:text="$"
                android:textColor="@color/accent"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCompanyTimeAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tvCompanyName"
                android:text="50% off"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>