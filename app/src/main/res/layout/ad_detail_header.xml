<?xml version="1.0" encoding="utf-8"?>

<!--Ad detail screen header -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Contains company images to swipe between -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerCompanyImages"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <!--Indicator visible only if there are multiple images to page between -->
    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="-30dp"
        android:visibility="invisible"/>

    <!--Company tagline
    Padding and white background are used here so the background of the rest of the layout can be light grey for cards-->
    <TextView
        android:id="@+id/tvCompanyTagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:paddingTop="@dimen/default_small_margin"
        android:textColor="@color/primary"
        android:textSize="20sp"
        tools:text="New Customer Special: Basic Cleaning With X-Rays"/>

    <!--Company details. If longer than 3 or 4 lines, it fades out toward the bottom and animates out when clicked  -->
    <TextView
        android:id="@+id/tvCompanyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:paddingBottom="@dimen/default_margin"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:paddingTop="@dimen/default_small_margin"
        tools:text="This is a very long description"/>

    <!--Divider gives the bottom of the card a hard edge -->
    <View style="@style/Divider"/>

    <!--Service item replaced by service cards- TODO: Replace this functionality with a RecyclerView -->
    <LinearLayout
        android:id="@+id/serviceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_small_margin"
        android:layout_marginRight="@dimen/default_small_margin"
        android:layout_marginTop="@dimen/default_small_margin"
        android:orientation="vertical"/>

    <!--Card with company location and contact information and a static map -->
    <include layout="@layout/card_company_location"/>

    <!--Staggered grid below this -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_small_margin"
        android:gravity="center_horizontal"
        android:text="@string/popular_deals"
        android:textColor="@color/primary"
        android:textSize="16sp"/>

</LinearLayout>